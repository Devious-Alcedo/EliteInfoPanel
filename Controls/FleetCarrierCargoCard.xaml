<UserControl x:Class="EliteInfoPanel.Controls.FleetCarrierCargoCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:EliteInfoPanel.ViewModels">
  

    <Grid Margin="8">
        <StackPanel>
            <TextBlock Text="Carrier Cargo" FontWeight="Bold" FontSize="16" Margin="0 0 0 8"/>
            <ItemsControl ItemsSource="{Binding Cargo}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <DockPanel LastChildFill="True">
                            <TextBlock Text="{Binding Name}" DockPanel.Dock="Left"/>
                            <TextBlock Text="{Binding Quantity}" DockPanel.Dock="Right"/>
                        </DockPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <TextBlock Text="(Tracking live transfers)" FontStyle="Italic"
                       FontSize="10" Foreground="Gray" Margin="0,6,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
