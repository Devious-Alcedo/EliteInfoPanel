<Window x:Class="EliteInfoPanel.Dialogs.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Options" Height="376" Width="479"
        WindowStartupLocation="Manual"
        Background="{DynamicResource MaterialDesignPaper}"
        WindowStyle="SingleBorderWindow"
        TextOptions.TextFormattingMode="Ideal"
        TextElement.Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
        FontFamily="{materialDesign:MaterialDesignFont}"
        TextOptions.TextRenderingMode="Auto">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="Display Settings" FontWeight="Bold" FontSize="18" Margin="0,0,0,10" Style="{DynamicResource MaterialDesignTextBlock}"/>

            <!-- Flag Icons -->
            <GroupBox Header="Status Flags to Show" Margin="0,0,0,10">
                <UniformGrid Columns="3">
                    <CheckBox Content="Shields Up" IsChecked="{Binding ShowFlag_ShieldsUp}"/>
                    <CheckBox Content="Supercruise" IsChecked="{Binding ShowFlag_Supercruise}"/>
                    <!-- Add the rest of your flag checkboxes here with data binding -->
                </UniformGrid>
            </GroupBox>

            <!-- "Change Display" button -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                <Button Content="Change Display" Command="{Binding ChangeDisplayCommand}"
                        Style="{DynamicResource MaterialDesignOutlinedButton}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Width="80" Margin="0,0,10,0" Content="OK" 
                        Command="{Binding SaveCommand}" 
                        IsDefault="True" 
                        Style="{DynamicResource MaterialDesignRaisedButton}" Click="Button_Click" />
                <Button Width="80" Content="Cancel" 
                        Command="{Binding CancelCommand}" 
                        IsCancel="True"
                        Style="{DynamicResource MaterialDesignRaisedButton}" Click="Button_Click_1"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>